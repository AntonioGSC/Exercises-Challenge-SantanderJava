package br.com.santander.banco.modelo;

public class ContaCorrente extends Conta {

	private Cheque cheque;
	
	public ContaCorrente(int agencia, int numero) {
		super(agencia, numero);
	}
	
	@Override
	public void saca(double valor) {
		if(valor <= super.saldo) {
			super.saldo -= valor;
			System.out.println("Saque feito apenas do saldo");
		}
		else if(valor < this.cheque) {
			this.cheque -= valor;
			System.out.println("Pago utilizando cheque especial");
		}
		else {
			System.out.println("Você não possui saldo nem limite em cheque suficiente");
		}
	}

	protected void setCheque(Cheque cheque) {
		this.cheque = cheque;
	}
}
